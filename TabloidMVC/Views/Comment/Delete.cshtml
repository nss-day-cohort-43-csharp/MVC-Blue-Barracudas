@model TabloidMVC.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="card col-md-12 col-lg-8">
                <h3 class="mt-3 text-primary text-center card-title">
                    Are you sure you want to delete this comment?
                </h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Subject)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Subject)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Content)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Content)
                    </dd>
                </dl>

                <form asp-action="Delete" asp-route-postId="@Model.PostId">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" asp-route-postId="@Model.PostId">Back to List</a>
                </form>
            </div>
        </div>
    </div>
