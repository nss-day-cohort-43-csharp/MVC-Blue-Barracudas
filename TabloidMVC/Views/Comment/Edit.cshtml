@model TabloidMVC.Models.Comment

@{
    ViewData["Title"] = "Edit";
}

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class=" card col-md-4">
            <h3 class="mt-3 text-primary text-center card-title">Edit Comment</h3>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="PostId" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <input asp-for="UserProfileId" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="CreateDateTime" class="form-control" type="hidden" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index" asp-route-postId="@Model.PostId">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
