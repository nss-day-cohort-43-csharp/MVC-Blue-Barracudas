@model TabloidMVC.Models.PostTag

@{
    ViewData["Title"] = "Create";
}

<h1>Add Tag</h1>

<h4>Add @Model.Tag.Name to @Model.Post.Title </h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TagId" class="form-control" type="hidden"/>
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PostId" class="form-control" type="hidden"/>
                <span asp-validation-for="PostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("Index", "PostTag", new { postId = @Model.PostId })">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
